---
interface Props {
  title: string;
  description: string;
  date: string;
  link?: string;
}

const { title, description, date, link } = Astro.props;
---

<div
  class="absolute w-3 h-3 bg-gray-200 rounded-full mt-1.5 -start-1.5 border border-white "
>
</div>
<time
  class="mb-1 text-sm font-normal leading-none text-yellow-100/90 "
  >{date}</time
>
<h3 class="text-lg font-semibold text-sky-300 mt-4 ">
  {title}
</h3>
<p class="mb-4 text-base font-normal text-gray-300 text-pretty">
  {description}
</p>
{
  link && (
    <a
      href={link}
      class="inline-flex items-center px-4 py-2 text-sm font-medium text-gray-900 bg-white border border-gray-200 rounded-lg hover:bg-gray-100 hover:text-blue-700 focus:z-10 focus:ring-4 focus:outline-none focus:ring-gray-200 focus:text-blue-700"
    >
      Saber m√°s ...{" "}
      <svg
        class="w-3 h-3 ms-2 rtl:rotate-180"
        aria-hidden="true"
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 14 10"
      >
        <path
          stroke="currentColor"
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M1 5h12m0 0L9 1m4 4L9 9"
        />
      </svg>
    </a>
  )
}
